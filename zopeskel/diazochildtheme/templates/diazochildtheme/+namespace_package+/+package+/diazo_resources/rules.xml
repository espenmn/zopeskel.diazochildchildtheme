<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- Apply the following rules to standard Plone pages -->
    <rules css:if-content="#visual-portal-wrapper">
        
        <nochildtheme if="$ajax_load" />
        <childtheme href="index.html" />

        <!-- Replace title with Plone's page title  -->
        <replace css:childtheme="html head title" css:content="html head title" />

        <!-- Drop the favicon spec coming from content; we'll use the one in the childtheme. -->
        <drop content="/html/head/link[@rel='shortcut icon']" />

        <!-- Copy base tag from Plone -->
        <before css:childtheme-children="html head" css:content="html head base" />

        <!-- Copy link, style, meta tags from Plone head -->
        <after css:childtheme-children="html head"
               content="/html/head/link | /html/head/style | /html/head/meta" />

        <!-- merge classes from Plone body with childtheme body -->
        <merge attributes="class" css:childtheme="body" css:content="body" />

        <!-- Copy script tags from Plone head to end of body -->
        <after css:childtheme-children="html body" css:content="html head script" />

        <!-- Move inline scripts in content to end of body -->
        <drop css:content="body script" />
        <after css:childtheme-children="html body" css:content="html body script" method="raw" />

        <!-- Insert your own rules here -->

        <!-- This rule pulls in the whole Plone layout. You'll typically replace this
             with rules that copy particular parts of the content into particular
             targets in your childtheme.
         -->
        <after css:childtheme="body p" css:content="#visual-portal-wrapper" />

    </rules>

</rules>
